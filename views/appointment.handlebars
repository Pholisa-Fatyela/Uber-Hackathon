	height:50px; 
	width:600px;
	padding:4px
}

	/* form element visual styles */
	.apptform input[type="text"], 
	.apptform textarea, 	
	.apptform select { 
		border:1px solid #707070;
	}
	.apptform input[type="text"]:focus, 
	.apptform textarea:focus, 
	.apptform select:focus {
		background: #fff; 
		border:1px solid #555; 
		box-shadow: 0 0 3px #aaa; 
	}


#prefweeks {
	display: block;
	/* float: left; */
	width: 800px;
	padding-bottom: 20px;
	 color: white;

}

#prefdays {
	display: block;
	/* float: left; */
	width: 900px;
	padding-bottom: 20px;
	 color: white;

}
